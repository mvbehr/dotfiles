[alias]
  co = checkout
  changes = diff --name-status -r
  sh = git-sh
	st = status -s
  ci = commit
  br = branch
  df = diff
  lg = log -p
  spull = !git-svn fetch && git-svn rebase
  spush = !git-svn dcommit

[diff]
  renames = true

[color]
  sh = auto
  status = auto
  branch = auto
	ui = true

[color "sh"]
  branch = yellow reverse
  workdir = blue bold
  dirty = red

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
	quotepath = false
	excludesfile = /Users/mb/.gitignore_global
	editor = subl --wait
	autocrlf = input

[mergetool]
	keepBackup = true
[merge]
	conflictstyle = diff3
[rerere]
	enabled = 1
[push]
	default = simple
[pull]
